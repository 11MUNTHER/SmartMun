<body>

  <h1>✍️ أنشئ منشورك</h1>
  <textarea id="postContent" placeholder="اكتب موضوع منشورك هنا..."></textarea><br>
  <button onclick="generatePost()">توليد المنشور</button>

  <div id="generatedPost" class="post" style="display: none;"></div>

  <script>
    function generatePost() {
      var content = document.getElementById("postContent").value;
      var postDiv = document.getElementById("generatedPost");

      if (content.trim() === "") {
        alert("اكتب شي أول!");
        return;
      }

      postDiv.innerHTML = content;
      postDiv.style.display = "block";
    }
  </script>

